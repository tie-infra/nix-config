+            var addresses = new[]
+            {
+                ipv4Address1,
+                ipv6Address1,
+            };
+
+            var cancellationToken = CancellationToken.None;
+
+            var sequence = new MockSequence();
+            _connectSocketMock.InSequence(sequence)
